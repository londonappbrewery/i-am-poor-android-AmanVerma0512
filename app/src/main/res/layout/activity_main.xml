<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1E5E5"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/Text_i_am"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:text="@string/title"
        android:textColor="#3c6382"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/Coal_image"
        android:layout_marginTop="50sp"
        android:clickable="false"
        android:text="@string/title1"
        android:textColor="#3c6382"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/Coal_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/coal" />

</RelativeLayout>
